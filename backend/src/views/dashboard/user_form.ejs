<% const pageTitle='Edit User' ; %>
    <%- include('../partials/header') %>

        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-edit me-2"></i>Edit User</h2>
                <a href="/dashboard/users" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Users
                </a>
            </div>

            <% if (typeof error !=='undefined' && error && error.length> 0) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <%= error[0] %>
                </div>
                <% } %>

                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header bg-white py-3">
                                    <h5 class="mb-0">User Profile</h5>
                                </div>
                                <div class="card-body">
                                    <form action="/dashboard/users/edit/<%= userData._id %>" method="POST">
                                        <div class="mb-3">
                                            <label for="discordId" class="form-label">Discord ID</label>
                                            <input type="text" class="form-control" id="discordId"
                                                value="<%= userData.discordId %>" disabled readonly>
                                            <div class="form-text">Discord ID cannot be changed.</div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="minecraftName" class="form-label">Minecraft Name</label>
                                            <input type="text" class="form-control" id="minecraftName"
                                                name="minecraftName" value="<%= userData.minecraftName %>" required>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="province" class="form-label">Province</label>
                                                <input type="text" class="form-control" id="province" name="province"
                                                    value="<%= userData.province %>">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="city" class="form-label">City</label>
                                                <input type="text" class="form-control" id="city" name="city"
                                                    value="<%= userData.city %>">
                                            </div>
                                        </div>

                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save me-2"></i>Save Changes
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>

        <%- include('../partials/footer') %>