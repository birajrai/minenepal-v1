<% const pageTitle='Users Management' ; %>
    <%- include('../partials/header') %>

        <div class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users me-2"></i>Users Management</h2>
            </div>

            <!-- Search and Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex d-md-none justify-content-between mb-2">
                        <strong>Filters</strong>
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#usersFilters" aria-expanded="false">Toggle</button>
                    </div>
                    <div id="usersFilters" class="collapse show">
                    <form action="/dashboard/users" method="GET" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" name="search"
                                    placeholder="Search by name, Discord ID, or City..." value="<%= query.search %>">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select" name="sort">
                                <option value="newest" <%=query.sort==='newest' ? 'selected' : '' %>>Newest First
                                </option>
                                <option value="oldest" <%=query.sort==='oldest' ? 'selected' : '' %>>Oldest First
                                </option>
                                <option value="name" <%=query.sort==='name' ? 'selected' : '' %>>Sort by Name (A-Z)
                                </option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">Apply</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>

            <% if (typeof error !=='undefined' && error && error.length> 0) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <%= error[0] %>
                </div>
                <% } %>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Discord ID</th>
                                            <th>Minecraft Name</th>
                                            <th>Location</th>
                                            <th>Joined</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (users && users.length> 0) { %>
                                            <% users.forEach(function(u) { %>
                                                <tr>
                                                    <td data-label="discord id"><code><%= u.discordId %></code></td>
                                                    <td data-label="minecraft name">
                                                        <% if (u.minecraftName) { %>
                                                            <strong>
                                                                <%= u.minecraftName %>
                                                            </strong>
                                                            <% } else { %>
                                                                <span class="text-muted">Not set</span>
                                                                <% } %>
                                                    </td>
                                                    <td data-label="location">
                                                        <% if (u.city && u.city !=='N/A' ) { %>
                                                            <%= u.city %>, <%= u.province %>
                                                                    <% } else { %>
                                                                        <span class="text-muted">Unknown</span>
                                                                        <% } %>
                                                    </td>
                                                    <td data-label="joined">
                                                        <%= new Date(u.createdAt).toLocaleDateString() %>
                                                    </td>
                                                    <td class="text-end" data-label="actions">
                                                        <a href="/dashboard/users/edit/<%= u._id %>"
                                                            class="btn btn-sm btn-warning me-1">
                                                            <i class="fas fa-edit me-1"></i>Edit
                                                        </a>
                                                        <form action="/dashboard/users/delete/<%= u._id %>"
                                                            method="POST" style="display:inline;">
                                                            <button type="submit" class="btn btn-sm btn-danger"
                                                                onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                                                <i class="fas fa-trash me-1"></i>Delete
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center text-muted py-4">
                                                                <i class="fas fa-users fa-3x mb-3 opacity-25"></i>
                                                                <p class="mb-0">No users found matching your criteria.
                                                                </p>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination && pagination.totalPages> 1) { %>
                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="/dashboard/users?page=<%= pagination.prevPage %>&search=<%= query.search %>&sort=<%= query.sort %>">Previous</a>
                                </li>

                                <% for(let i=1; i <=pagination.totalPages; i++) { %>
                                    <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="/dashboard/users?page=<%= i %>&search=<%= query.search %>&sort=<%= query.sort %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                            <a class="page-link"
                                                href="/dashboard/users?page=<%= pagination.nextPage %>&search=<%= query.search %>&sort=<%= query.sort %>">Next</a>
                                        </li>
                            </ul>
                        </nav>
                        <% } %>
        </div>

        <%- include('../partials/footer') %>