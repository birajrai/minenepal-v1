<% const pageTitle='Servers Management' ; %>
    <%- include('../partials/header') %>

        <div class="container-fluid px-4">
            <% if (typeof error !=='undefined' && error && error.length> 0) { %>
                <div class="alert alert-danger mt-3" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <%= error[0] %>
                </div>
                <% } %>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2><i class="fas fa-server me-2"></i>Servers Management</h2>
                        <a href="/dashboard/servers/add" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add New Server
                        </a>
                    </div>

                    <!-- Search and Filter -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex align-items-center">
                                    <h5 class="mb-0">Filters</h5>
                                </div>
                                <div class="d-md-none">
                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#serversFilters" aria-expanded="true">Toggle</button>
                                </div>
                            </div>

                            <div id="serversFilters" class="collapse show">
                                <form action="/dashboard/servers" method="GET" class="row g-3 align-items-end">
                                    <div class="col-md-6">
                                        <label class="form-label visually-hidden" for="search">Search</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                                            <input id="search" type="text" class="form-control" name="search" placeholder="Search by name..." value="<%= query.search %>">
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <label class="form-label visually-hidden" for="type">Type</label>
                                        <select id="type" class="form-select" name="type">
                                            <option value="">All Types</option>
                                            <option value="Java" <%=query.type==='Java' ? 'selected' : '' %>>Java</option>
                                            <option value="Bedrock" <%=query.type==='Bedrock' ? 'selected' : '' %>>Bedrock</option>
                                        </select>
                                    </div>

                                    <div class="col-md-2">
                                        <label class="form-label visually-hidden" for="sort">Sort</label>
                                        <select id="sort" class="form-select" name="sort">
                                            <option value="votes" <%=query.sort==='votes' ? 'selected' : '' %>>Votes (High → Low)</option>
                                            <option value="name" <%=query.sort==='name' ? 'selected' : '' %>>Name (A → Z)</option>
                                        </select>
                                    </div>

                                    <div class="col-md-1 d-grid">
                                        <button type="submit" class="btn btn-primary">Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Name</th>
                                            <th>IP Address</th>
                                            <th>Port</th>
                                            <th>Type</th>
                                            <th>Status</th>
                                            <th>Featured</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (servers && servers.length> 0) { %>
                                            <% servers.forEach(function(s) { %>
                                                        <tr>
                                                                                    <td data-label="name">
                                                                <div class="d-flex align-items-center">
                                                                    <% if (s.server_icon) { %>
                                                                        <img src="<%= s.server_icon %>" alt="icon" style="width:32px;height:32px;object-fit:cover;border-radius:6px;border:1px solid #e6e6e6;margin-right:10px;" />
                                                                    <% } %>
                                                                    <div>
                                                                        <strong>
                                                                            <%= s.name %>
                                                                        </strong>
                                                                        <% if (s.slug) { %>
                                                                            <br><small class="text-muted">
                                                                                <%= s.slug %>
                                                                            </small>
                                                                        <% } %>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                    <td data-label="ip"><code><%= s.ip %></code></td>
                                                    <td data-label="port">
                                                        <%= s.port %>
                                                    </td>
                                                    <td data-label="type"><span class="badge bg-info">
                                                            <%= s.server_type %>
                                                        </span></td>
                                                    <td data-label="status">
                                                        <% if (s.disabled) { %>
                                                            <span class="badge bg-danger">
                                                                <i class="fas fa-times-circle me-1"></i>Disabled
                                                            </span>
                                                            <% } else { %>
                                                                <span class="badge bg-success">
                                                                    <i class="fas fa-check-circle me-1"></i>Active
                                                                </span>
                                                                <% } %>
                                                    </td>
                                                    <td data-label="featured">
                                                        <% if (s.featured) { %>
                                                            <i class="fas fa-star text-warning fs-5"
                                                                title="Featured Server"></i>
                                                        <% } else { %>
                                                            <span class="text-muted">-</span>
                                                        <% } %>
                                                    </td>
                                                    <td class="text-end" data-label="actions">
                                                        <a href="/dashboard/servers/edit/<%= s._id %>"
                                                            class="btn btn-sm btn-warning me-1">
                                                            <i class="fas fa-edit me-1"></i>Edit
                                                        </a>
                                                        <form action="/dashboard/servers/delete/<%= s._id %>"
                                                            method="POST" style="display:inline;">
                                                            <button type="submit" class="btn btn-sm btn-danger"
                                                                onclick="return confirm('Are you sure you want to delete this server?');">
                                                                <i class="fas fa-trash me-1"></i>Delete
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="7" class="text-center text-muted py-4">
                                                                <i class="fas fa-server fa-3x mb-3 opacity-25"></i>
                                                                <p class="mb-0">No servers found. Add your first server!
                                                                </p>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination && pagination.totalPages> 1) { %>
                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="/dashboard/servers?page=<%= pagination.prevPage %>&search=<%= query.search %>&sort=<%= query.sort %>&type=<%= query.type %>">Previous</a>
                                </li>

                                <% for(let i=1; i <=pagination.totalPages; i++) { %>
                                    <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="/dashboard/servers?page=<%= i %>&search=<%= query.search %>&sort=<%= query.sort %>&type=<%= query.type %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                            <a class="page-link"
                                                href="/dashboard/servers?page=<%= pagination.nextPage %>&search=<%= query.search %>&sort=<%= query.sort %>&type=<%= query.type %>">Next</a>
                                        </li>
                            </ul>
                        </nav>
                        <% } %>
        </div>

        <%- include('../partials/footer') %>